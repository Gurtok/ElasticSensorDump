<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="ca.dungeons.sensordump.MainActivity"
    android:background="@color/backGroundGreyTint">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha=".1"
        android:background="@drawable/elastic_logo"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="bottom" />

    <Switch
        android:id="@+id/mobileDataSwitch"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="26dp"
        android:switchPadding="10dp"
        android:text="@string/mobileData_Switch" />

    <Switch
        android:id="@+id/gpsDataSwitch"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mobileDataSwitch"
        android:layoutDirection="rtl"
        android:switchPadding="10dp"
        android:text="@string/gps_rec"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/ibSetup"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/backGroundGreyTint"
        android:contentDescription="@string/settings"
        android:foregroundGravity="top"
        android:src="@drawable/ic_action_navigation_more_vert" />

    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical"
        android:layout_below="@+id/ibSetup"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnStart"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/Light_blue_transparent"
            android:text="@string/start_button"
            android:textAlignment="center"
            android:theme="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/TickText"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="false"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:selectAllOnFocus="false"
            android:text="@string/Collection_Interval" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/SeekBarseekBar"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="25" />

        <TextView
            android:id="@+id/main_Banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="@string/No_Sensor_Readings"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@+id/topBarLayout"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/Sensor_Readings"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sensor_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/databaseText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/databaseCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/Documents_Written_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/Documents_Written"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/documents_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="5dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/GPS_Updates_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/GPS_Updates"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gps_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/Error_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/Errors"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/errors_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>